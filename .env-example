# OSINT Deep Research - Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# main.py
# =============================================================================

# Model name for the OpenAI-compatible API
MODEL_NAME=gpt-5.2

# API endpoint URL (e.g., OpenAI, Azure, local LLM server)
MODEL_URL=https://api.openai.com/v1

# API key for the OpenAI-compatible API
OPENAI_API_KEY=sk-...

# Alternate env var name supported by some workers (fallback if OPENAI_API_KEY is unset)
API_KEY=sk-...

# Langfuse tracing (used by odr.integrations.observability)
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=http://localhost:3000

# Search provider credentials (used by odr.tools.search)
# Prefer Tavily; SerpApi is a fallback.
TAVILY-PYTHON-RESEARCH-API-KEY=tvly-...
# TAVILY_API_KEY=tvly-...
SERPAPI_API_KEY=...

# NOTE: These are not currently referenced in code (kept for compatibility / future use)
# SEARCH_ENGINE=google
# SEARCH_URL_TEMPLATE=https://www.google.com/search?q={query}

# =============================================================================
# Docker Compose / Langfuse Infrastructure
# =============================================================================

# PostgreSQL
POSTGRES_USER=langfuse
POSTGRES_PASSWORD=<generate-secure-password>
POSTGRES_DB=langfuse

# ClickHouse
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=<generate-secure-password>

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=<generate-secure-password>

# Langfuse Authentication Secrets
# Generate with: openssl rand -hex 16
NEXTAUTH_SECRET=<run: openssl rand -hex 16>
SALT=<run: openssl rand -hex 16>

# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=<run: openssl rand -hex 32>

# Langfuse Initial Setup (headless initialization)
LANGFUSE_INIT_ORG_ID=odr-org
LANGFUSE_INIT_ORG_NAME=ODR Development
LANGFUSE_INIT_PROJECT_ID=odr-project
LANGFUSE_INIT_PROJECT_NAME=OSINT Deep Research

# Generate with: echo "pk-lf-$(openssl rand -hex 8)" and echo "sk-lf-$(openssl rand -hex 16)"
LANGFUSE_INIT_PROJECT_PUBLIC_KEY=<run: echo "pk-lf-$(openssl rand -hex 8)">
LANGFUSE_INIT_PROJECT_SECRET_KEY=<run: echo "sk-lf-$(openssl rand -hex 16)">

LANGFUSE_INIT_USER_EMAIL=admin@example.com
LANGFUSE_INIT_USER_NAME=admin
LANGFUSE_INIT_USER_PASSWORD=<generate-secure-password>

# Langfuse Server URL (for docker internal networking)
NEXTAUTH_URL=http://localhost:3000

